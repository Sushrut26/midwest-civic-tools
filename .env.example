# Copy this file to .env.local and fill in your values.
# This file should be committed to source control.
# .env.local should NOT be committed.

# The public URL of your deployment (must include protocol, e.g. https://...)
# Used for sitemap generation and canonical URLs.
SITE_URL=https://civic-tools.com

# Sentry DSN for client + server error monitoring (free tier available)
NEXT_PUBLIC_SENTRY_DSN=

# Optional Sentry sampling controls
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAY_SESSION_SAMPLE_RATE=0.0
NEXT_PUBLIC_SENTRY_REPLAY_ON_ERROR_SAMPLE_RATE=0.1

# Optional release/environment tags (Vercel auto-populates many values)
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=

# Optional source map upload settings (only needed if you want uploaded source maps)
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=
